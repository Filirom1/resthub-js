
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.resthub</groupId>
    <artifactId>resthub-js</artifactId>
    <name>Javascript stack</name>
    <packaging>war</packaging>
    <version>1.1-SNAPSHOT</version>
    <description>
		RESThub Javascript Stack including frameworks and helpers
    </description>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
		<version>2.1</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
		    <warSourceDirectory>${basedir}/src</warSourceDirectory>
                </configuration>
            </plugin>
	 <plugin>
                    <groupId>org.mortbay.jetty</groupId>
                    <artifactId>jetty-maven-plugin</artifactId>
                    <version>7.2.0.v20101020</version>
                    <configuration>
			<webAppSourceDirectory>${basedir}/src</webAppSourceDirectory>
                  	<!-- We use non NIO connector in order to avoid read only static files under windows -->
                  	<connectors>
                    	<connector implementation="org.eclipse.jetty.server.bio.SocketConnector">
                        	<port>8080</port>
                        	<maxIdleTime>60000</maxIdleTime>
						</connector>
                  	</connectors>
                  <webAppConfig>
                    <contextPath>/</contextPath>
                  </webAppConfig>
                </configuration>
                </plugin>

            <!--  To compress javascript : mvn net.alchim31.maven:yuicompressor-maven-plugin:0.9:compress -->
            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <version>0.9</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
